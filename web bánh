  <!-- ===== Scripts ===== -->
  <script>
    /* ========== Slideshow ========== */
    let slideIndex = 0;
    const slides = document.querySelectorAll(".slide");
    function showSlide(i){ slides.forEach((s, idx)=> s.classList.toggle("active", idx===i)); }
    function nextSlide(){ slideIndex = (slideIndex + 1) % slides.length; showSlide(slideIndex); }
    function prevSlide(){ slideIndex = (slideIndex - 1 + slides.length) % slides.length; showSlide(slideIndex); }
    setInterval(nextSlide, 5000);

    /* ========== Countdown 2 gi·ªù ========== */
    const endTime = Date.now() + 2*60*60*1000;
    const countdownEl = document.getElementById("countdown");
    const pad = n => n.toString().padStart(2,'0');
    function tick(){
      const left = Math.max(0, endTime - Date.now());
      const s = Math.floor(left/1000), h = Math.floor(s/3600), m = Math.floor((s%3600)/60), ss = s%60;
      countdownEl.textContent = left<=0 ? "‚è∞ Flash Sale ended!" : `${h}h ${pad(m)}m ${pad(ss)}s`;
    }
    setInterval(tick, 1000); tick();

    /* ========== Modal s·∫£n ph·∫©m (gi·ªØ nh∆∞ file c≈©) ========== */
    function openModal(){ document.getElementById('productModal').style.display='flex'; }
    function closeModal(){ document.getElementById('productModal').style.display='none'; }
    window.addEventListener('click', e=>{
      const modal = document.getElementById('productModal');
      if(e.target===modal) closeModal();
    });

    /* ========== Gi·ªè h√†ng ƒë·ªông ========== */
    const cartState = { items: [] }; // [{id,name,price,img,qty}]
    const cartBtn = document.querySelector('.cart-button');
    const cartModal = document.getElementById('cartModal');
    const cartItemsEl = document.getElementById('cartItems');
    const cartTotalEl = document.getElementById('cartTotal');

    function openCart(){ cartModal.style.display='flex'; }
    function closeCart(){ cartModal.style.display='none'; }
    window.addEventListener('click', e=>{ if(e.target===cartModal) closeCart(); });

    const money = n => Number(n||0).toLocaleString('vi-VN', { style:'currency', currency:'VND' });
    const onlyDigits = s => Number(String(s||'').replace(/[^\d]/g, '') || 0);

    function addToCart({ name, price=0, img }) {
      const id = `${name}__${price}`;
      const found = cartState.items.find(it => it.id===id);
      if(found) found.qty += 1;
      else cartState.items.push({ id, name, price:Number(price||0), img, qty:1 });
      renderCart();
    }

    function renderCart(){
      const count = cartState.items.reduce((a,b)=>a+b.qty,0);
      if (cartBtn) cartBtn.textContent = `üõí Gi·ªè h√†ng (${count})`;

      cartItemsEl.innerHTML = '';
      let total = 0;
      cartState.items.forEach((it, idx)=>{
        total += it.price * it.qty;
        const row = document.createElement('div');
        row.className = 'cart-item';
        row.innerHTML = `
          <img src="${it.img}" alt="${it.name}" class="cart-img">
          <div class="cart-details">
            <p class="cart-title">${it.name}</p>
            <div class="cart-qty">
              <button data-action="dec" data-index="${idx}">‚àí</button>
              <span>${it.qty}</span>
              <button data-action="inc" data-index="${idx}">+</button>
            </div>
          </div>
          <div class="cart-price">${money(it.price * it.qty)}</div>
          <button class="cart-remove" title="Xo√°" data-action="remove" data-index="${idx}">√ó</button>
        `;
        cartItemsEl.appendChild(row);
      });
      cartTotalEl.textContent = `T·ªïng: ${money(total)}`;
    }

    // B·∫Øt click tr√™n t·∫•t c·∫£ n√∫t "TH√äM V√ÄO GI·ªé H√ÄNG"
    document.addEventListener('click', (e)=>{
      const addBtn = e.target.closest('.fs-order-btn, .btn-order, .order-btn');
      if(addBtn){
        const card = addBtn.closest('.fs-card, .product-card');
        if(!card) return;
        const name =
          card.dataset.name ||
          card.querySelector('.fs-name, .product-card__title, .product-name, h3, h4')?.textContent?.trim() ||
          'S·∫£n ph·∫©m';
        const price =
          Number(card.dataset.price || 0) ||
          onlyDigits(card.querySelector('.fs-price, .product-card__price--sale, .price')?.textContent);
        const img = card.dataset.img || card.querySelector('img')?.src || '';

        addToCart({ name, price, img });

        const prev = addBtn.textContent;
        addBtn.disabled = true;
        addBtn.textContent = 'ƒê√É TH√äM ‚úì';
        setTimeout(()=>{ addBtn.disabled=false; addBtn.textContent=prev; }, 800);
      }

      // N√∫t trong gi·ªè h√†ng
      const act = e.target.closest('[data-action]');
      if(act && cartState.items.length){
        const i = Number(act.dataset.index), a = act.dataset.action;
        if(a==='inc') cartState.items[i].qty += 1;
        if(a==='dec') cartState.items[i].qty = Math.max(1, cartState.items[i].qty - 1);
        if(a==='remove') cartState.items.splice(i,1);
        renderCart();
      }
    });
    // (Gi·ªØ c√°c n√∫t +/- demo trong modal)
    function increaseQty(){ const el=document.getElementById('qty'); el.textContent = +el.textContent + 1; }
    function decreaseQty(){ const el=document.getElementById('qty'); if(+el.textContent>1) el.textContent = +el.textContent - 1; }
  
    // ====== M·ªü form t·ª´ gi·ªè h√†ng ======
const checkoutModal   = document.getElementById('checkoutModal');
const checkoutTotalEl = document.getElementById('checkoutTotal');
const checkoutForm    = document.getElementById('checkoutForm');
const checkoutContent = document.getElementById('checkoutContent');
const checkoutSuccess = document.getElementById('checkoutSuccess');

function openCheckout(){
  // t√≠nh t·ªïng t·ª´ cartState (ƒë√£ c√≥ ·ªü file tr∆∞·ªõc)
  if (!cartState.items.length){
    alert('Gi·ªè h√†ng c·ªßa b·∫°n ƒëang tr·ªëng!');
    return;
  }
  const total = cartState.items.reduce((t, it) => t + it.price * it.qty, 0);
  checkoutTotalEl.textContent = Number(total).toLocaleString('vi-VN', {style:'currency', currency:'VND'});

  // reset view
  checkoutContent.style.display = 'block';
  checkoutSuccess.style.display = 'none';
  checkoutModal.style.display = 'flex';
}

function closeCheckout(){
  checkoutModal.style.display = 'none';
}

// ƒë√≥ng khi click ra ngo√†i
window.addEventListener('click', (e)=>{
  if (e.target === checkoutModal) closeCheckout();
});

// G√°n n√∫t "ƒê·∫∂T H√ÄNG NGAY" trong gi·ªè ƒë·ªÉ m·ªü form
document.addEventListener('click', (e)=>{
  if (e.target.id === 'openCheckout' || (e.target.closest && e.target.closest('#openCheckout'))) {
    // n·∫øu b·∫°n d√πng id cho n√∫t, ho·∫∑c th√™m id v√†o trong
    openCheckout();
  }
});
// N·∫øu trong HTML c·ªßa b·∫°n n√∫t gi·ªè h√†ng ch∆∞a c√≥ id, ƒë·ªïi n√∫t ƒë√≥ th√†nh:
// <button class="btn-buy" id="openCheckout">ƒê·∫∂T H√ÄNG NGAY</button>

// ====== Submit form ======
checkoutForm.addEventListener('submit', function(e){
  e.preventDefault();

  const name  = document.getElementById('fullName').value.trim();
  const phone = document.getElementById('phone').value.trim();
  const addr  = document.getElementById('address').value.trim();
  const email = document.getElementById('email').value.trim();

  // validate ƒë∆°n gi·∫£n
  const phoneOk = /^[0-9]{9,11}$/.test(phone.replace(/\D/g,''));
  const emailOk = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);

  if (!name || !phoneOk || !addr || !emailOk){
    alert('Vui l√≤ng nh·∫≠p ƒë·∫ßy ƒë·ªß v√† ƒë√∫ng ƒë·ªãnh d·∫°ng (SƒêT 9‚Äì11 s·ªë, Email h·ª£p l·ªá).');
    return;
  }

  // => Th√†nh c√¥ng: hi·ªán l·ªùi c·∫£m ∆°n, x√≥a gi·ªè
  checkoutContent.style.display = 'none';
  checkoutSuccess.style.display = 'block';

  // reset gi·ªè sau 1s (ho·∫∑c khi ƒë√≥ng)
  setTimeout(()=>{
    cartState.items = [];
    renderCart();          // d√πng h√†m ƒë√£ c√≥
    // N·∫øu mu·ªën ƒë√≥ng t·ª± ƒë·ªông:
    // closeCheckout();
    // closeCart();
  }, 1000);

  // reset form
  checkoutForm.reset();
